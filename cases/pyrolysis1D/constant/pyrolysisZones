FoamFile
{
    version     2.0;
    format      binary;
    class       dictionary;
    location    "constant";
    object      pyrolysisZones;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

    pyrolysis
    {

        active          true;

        pyrolysisModel  reactingOneDim;

        regionName      panelRegion;

        reactingOneDimCoeffs
        {
            gasHSource      no; //Energy source term due to pyrolysis gas
            QrHSource       no; //Energy source term due in depht radiation

            filmCoupled     false;

            radFluxName     Qr;

            minimumDelta    1e-6;

            moveMesh        false;

            useChemistrySolvers false;
        }

        infoOutput      true;
    }

