dimensions      [1 -1 -1 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    top
    {
        type            zeroGradient;
    }
    sides
    {
        type            zeroGradient;
    }
    base
    {
        type            zeroGradient;
    }
    burner          
    {
        type            zeroGradient;
    }
    "(region0_to_pyrolysisRegion_box_.*)"
    {
        type            alphaSgsFireWallFunction;
        QcFlame         16000.0; //22000.0;
        QcThreshold     4000.0; //400.0;
        value           uniform 0;
    }
}


