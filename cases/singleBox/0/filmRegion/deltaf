FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0/filmRegion";
    object      deltaf;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 0 0 0 0 0];

internalField   uniform 0.0;

boundaryField
{
    // cyclic boundaries between film patches
    "(box_[xyz]norm_[mp]_to_box_[xyz]norm_[mp])"
    {
        type            nonuniformTransformCyclic;
    }

    // top film surface
    "(.*_top)"
    {
        type            zeroGradient;
    }

    // mapped boundaries
    "(box_[xyz]norm_[mp])"
    {
        type            zeroGradient;
    }

}

// ************************************************************************* //
